<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp">

    <ImageView
        android:id="@+id/item_imv_image"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/margin_all_normal_16dp"
        android:src="@color/design_default_color_error"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/item_tv_title"
        style="@style/App.TextAppearance.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/sample_movie_title"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_imv_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_desc"
        style="@style/App.TextAppearance"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="14"
        android:text="@string/sample_movie_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_imv_image"
        app:layout_constraintTop_toBottomOf="@id/item_tv_title" />



</androidx.constraintlayout.widget.ConstraintLayout>